{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": [
      "chrome-types",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/chrome-types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
